{
  "compilerOptions": {
    "strict": true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "config",
    "./scripts/**/*",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./webpack.config.ts",
    "./cypress.config.ts",
    "cypress"
  ],
  "exclude": [
    "**/.fttemplates/**"
  ]
}